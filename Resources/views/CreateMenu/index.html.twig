{% extends '@MauticCore/Default/content.html.twig' %}

{% block headerTitle %}{% endblock %}

{% block content %}

    {{ form_start(form) }}


        <a href="{{ path('createmenuitem') }}" class="btn btn-primary mb-8">Add</a>

        <div class="container">
            {% for item in form.vars.data %}
                <div class="pb-16 mb-16" style="border-bottom: 2px solid #d5d5d5;">
                    <input type="hidden" name="items[{{ item.id }}][id]" value="{{ item.id }}">
                    <div class="row mb-2 align-items-center">
                        <div class="col-md-5">
                            <label>Name</label>
                            <input type="text" class="form-control" name="items[{{ item.id }}][name]" value="{{ item.name }}">
                        </div>
                        <div class="col-md-5">
                            <label>Label</label>
                            <input type="text" class="form-control" name="items[{{ item.id }}][label]" value="{{ item.label }}">
                        </div>
                        <div class="col-md-2 text-end">
                            <label>&nbsp;</label>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem({{ item.id }})">Delete</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label>Sort Order</label>
                            <input type="number" class="form-control" name="items[{{ item.id }}][sortOrder]" value="{{ item.sortOrder }}">
                        </div>
                        <div class="col-md-6">
                            <label>URL</label>
                            <input type="text" class="form-control" name="items[{{ item.id }}][url]" value="{{ item.url }}">
                        </div>
                        <div class="col-md-4">
                            <label>Type</label>
                            <select class="form-select" name="items[{{ item.id }}][type]">
                                <option value="blank" {% if item.type == 'blank' %}selected{% endif %}>Blank</option>
                                <option value="iFrame" {% if item.type == 'iFrame' %}selected{% endif %}>iFrame</option>
                            </select>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <button type="submit" class="btn btn-primary mt-8">Speichern</button>
        </div>

    {{ form_end(form) }}

{% endblock %}


