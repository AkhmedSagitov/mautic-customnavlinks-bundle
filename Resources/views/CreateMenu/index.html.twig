{% extends '@MauticCore/Default/content.html.twig' %}

{% block headerTitle %}{% endblock %}

{% block content %}

    {{ form_start(form) }}

        <a href="{{ path('createmenuitem') }}" class="btn btn-primary mb-8">Add</a>

        <div class="container">
            {% for item in form.vars.data %}
                <div class="input-group sortable-no-reorder mb-3 pb-3">

                    <a href="{{ path('deletemenuitem', {'id': item.id}) }}" class="input-group-addon preaddon">
                        <i class="ri-close-line"></i>
                    </a>

                    <div class="flex-grow-1">
                        <div class="row g-0">
                            <div class="col-md-4 pr-0">
                                <input type="text" class="form-control" name="items[{{ item.id }}][name]" placeholder="Name" value="{{ item.name }}">
                            </div>
                            <div class="col-md-5 pr-0 pl-0">
                                <input type="text" class="form-control" name="items[{{ item.id }}][url]" placeholder="URL" value="{{ item.url }}">
                            </div>
                            <div class="col-md-1 pr-0 pl-0">
                                <input type="number" class="form-control" name="items[{{ item.id }}][sortOrder]" placeholder="Sort" value="{{ item.sortOrder }}">
                            </div>
                            <div class="col-md-2 pr-0 pl-0">
                                <select class="form-select" name="items[{{ item.id }}][type]">
                                    <option value="blank" {% if item.type == 'blank' %}selected{% endif %}>Blank</option>
                                    <option value="iFrame" {% if item.type == 'iFrame' %}selected{% endif %}>iFrame</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            {% endfor %}

            <button type="submit" class="btn btn-primary mt-3">Speichern</button>
        </div>

    {{ form_end(form) }}

{% endblock %}




